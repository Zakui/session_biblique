
<%= render template: 'layouts/navbar' %>

<div class="container mt-4">
  <h1 class="text-center mb-4"><%= @batiment.nom %></h1>

  <div class="card border-light">
    <div class="card-header">
      <strong class="text-center">Datials</strong>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="raison_sociale">Nom:</label>
            <h5><%= @batiment.nom %></h5>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="raison_sociale">Abreviation:</label>
            <h5><%= @batiment.abbreger %></h5>
          </div>
        </div>
      </div>
      <hr>

      <h1 class="text-center mb-4">Liste des dortoirs</h1>

      <%= link_to  new_batiment_dortoir_path(@batiment), class: 'btn btn-primary mb-4' do %>
        <i class="fa fa-plus"></i> Nouveau
      <% end %>

      <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nom</th>
            <th scope="col">Abreviation</th>
            <th scope="col">Capacite</th>
            <th scope="col">Place disponible</th>
            <th scope="col">Occupant</th>
            <th scope="col">Date de modification</th>
            <th scope="col">Action</th>
          </tr>
        </thead>

        <tbody>
          <% @batiment.dortoirs.each_with_index do |dortoir , i| %>
            <tr>
              <td scope="row"><%= i+1 %></td>
              <td><%= dortoir.nom %></td>
              <td><%= dortoir.abbreger %></td>
              <td><%= dortoir.capacite %></td>
              <td><%= dortoir.place_disponible %></td>
              <td><%= dortoir.ocupant %></td>
              <td><%= l dortoir.updated_at, format: "%a, %d %B %Y %H:%M" %></td>
              <td><%= link_to 'Voir', batiment_dortoir_path(@batiment, dortoir) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="row form-group">
        <div class="col-md-12" style="text-align:right;">
          <a href="<%= edit_batiment_path(@batiment) %>" class="btn btn-primary">
            <i class="fa fa-pencil"></i> Modifier
          </a>
          <a href="<%= batiments_path %>" class="btn btn-secondary">
            <i class="fa fa-times-circle"></i> Retour
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

