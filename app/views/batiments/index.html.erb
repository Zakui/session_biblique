<%= render template: 'layouts/navbar' %>

<div class="container mt-4">
  <h1 class="text-center mb-4">Liste des batiments</h1>

  <%= link_to  new_batiment_path, class: 'btn btn-primary mb-4' do %>
    <i class="fa fa-plus"></i> Nouveau
  <% end %>

  <table id="dttb-batiment" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nom</th>
        <th scope="col">Abreviation</th>
        <th scope="col">NB dortoir</th>
        <th scope="col">Capacite</th>
        <th scope="col">Place disponible</th>
        <th scope="col">Date de modification</th>
        <th scope="col">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @batiments.each do |batiment| %>
        <tr>
          <td scope="row"></td>
          <td><%= batiment.nom %></td>
          <td><%= batiment.abbreger %></td>
          <td><%= batiment.dortoirs.length %></td>
          <td><%= batiment.get_capacite %></td>
          <td><%= batiment.get_place_disponible %></td>
          <td><%= l batiment.updated_at, format: "%a, %d %B %Y %H:%M" %></td>
          <td><%= link_to 'Voir', batiment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
