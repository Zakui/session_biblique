
<%= form_with(model: [@batiment, dortoir], local: true) do |form| %>
  <% if dortoir.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dortoir.errors.count, "error") %> prohibited this dortoir from being saved:</h2>

      <ul>
      <% dortoir.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :nom %>
      <%= form.text_field :nom, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :abbreger %>
      <%= form.text_field :abbreger, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :capacite %>
      <%= form.number_field :capacite, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= form.label :ocupant %>
      <%= form.text_field :ocupant, class: 'form-control' %>
    </div>
  </div>

  <div class="form-row" style="float: right;">
    <button type="submit" class="btn btn-primary mr-3">
      <i class="fa fa-save"></i> Enregistrer
    </button>
    <%= link_to @batiment, class: 'btn btn-secondary' do %>
      <i class="fa fa-times-circle"></i> Retour
    <% end %>
  </div>
<% end %>

